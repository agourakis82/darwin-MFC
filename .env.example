# DARWIN-MFC FRONTEND ENVIRONMENT
# =================================
#
# Copy this file to .env.local and fill in the values.
# NEVER commit .env.local to version control!

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL (PocketBase)
NEXT_PUBLIC_API_URL=http://localhost:8090

# Production API URL
# NEXT_PUBLIC_API_URL=https://api.mfc.agourakis.med.br

# =============================================================================
# KEYCLOAK OAUTH2
# =============================================================================

# Keycloak realm URL
NEXT_PUBLIC_KEYCLOAK_URL=http://localhost:8080
NEXT_PUBLIC_KEYCLOAK_REALM=darwin-mfc
NEXT_PUBLIC_KEYCLOAK_CLIENT_ID=darwin-mfc-web

# =============================================================================
# MEILISEARCH
# =============================================================================

# Search API URL
NEXT_PUBLIC_SEARCH_URL=http://localhost:7700
NEXT_PUBLIC_SEARCH_API_KEY=

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================

# Privacy-respecting analytics (optional)
# NEXT_PUBLIC_ANALYTICS_ID=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_AUTH=false
NEXT_PUBLIC_ENABLE_COMMUNITY=false
NEXT_PUBLIC_ENABLE_LEARNING=true
NEXT_PUBLIC_ENABLE_PWA=true

# =============================================================================
# SUPABASE (NEW - Backend as a Service)
# =============================================================================

# Supabase Configuration
# Get these from https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Optional: Service role key (server-side only, NEVER expose to client)
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Enable debug mode
NEXT_PUBLIC_DEBUG=false
